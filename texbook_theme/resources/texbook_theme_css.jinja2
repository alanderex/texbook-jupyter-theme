/* -----------------------------------
    CELLS
   -----------------------------------
*/

div.cell {
    padding: 12px 0 5px 0 !important;
    right: 2px;
    border:  none;
}

div.cell .inner_cell {
    padding-left: 5px;
    border-right: 5px solid var(--background-color);
    border-left:  0.1rem dotted var(--background-color);
}

div.cell.selected {
    border-radius: 0;
}


div.cell.selected {
    border: none;
    background: none !important;
}

div.cell.selected .inner_cell {
    /* left and right border on current cell */
    border-left:  0.1rem dotted lightgrey;
    /* coloured and visible */
    border-right: 5px solid var(--cell-display-border);
    /*margin-right: -2px;*/
}

div.code_cell.selected .inner_cell {
    border-left: 0 !important;
}

.edit_mode div.code_cell.selected .inner_cell,
div.text_cell.selected.unrendered .inner_cell {
    border-left: none;
    border-right: 5px solid var(--cell-edit-border);
}

/*
Overlay with Shadow for Code Cell Selected !
*/
div.code_cell.selected, div.code_cell.selected.jupyter-soft-selected {
    border: none;
    background: transparent;
    box-shadow: 0 6px 18px #aaa;
    z-index: 10;
    top: -10px;
}

div.cell.selected:before, div.cell.selected.jupyter-soft-selected:before {
    position: absolute;
    display: none;
    top: -1px;
    left: -1px;
    width: 0;
    height: calc(100% + 2px);
    content: '';
    background: none;
}

div.cell.selected div.input:before {
    display: inline-block;
    position: absolute;
    content: "\279E";
    font-size: 2rem;
    top: 14px;
    /*top: 40px;*/
    width: 10px;
    left: 30px;
    /*left: 15px;*/
    color: var(--cell-display-border);
    font-weight: bold !important;
}

/* Cell Input and Output */

div.input_prompt {
    color: #888;
    font-style: normal !important;
    font-size: 1.5rem;
}

div.input_prompt bdi,
div.output_prompt bdi {
    line-height: 0;
    font-size:0;
    color: transparent;
    left: -10000px;
    content: "\21E2";

}

div.output_wrapper {
    margin-top: 8px;
}

div.output_area pre, div.output_subarea {
    font-weight: normal;
    word-break: normal;
    word-wrap: break-word;
}

div.output_area pre {
    --text-markdown-render-mono-font: {{ mono_font }}, "mono-code", monospace !important;

    padding-bottom: 15px;
    padding-top: 10px;
}

/* Output Standard Error  */
div.output_stderr {
    background-color: #FFFFFF;
}

div.out_prompt_overlay:hover {
    box-shadow: none;
    background: none;
}

/* Output HTML after cell code - e.g. Pandas DataFrame */
div.output_html {
    color: var(--code-text-color);
}


div.output_html {
    font-size: 1.3rem;
    font-weight: normal;
    font-family: {{ mono_font }}, "mono-code", monospace;
    padding-bottom: 15px;
    padding-top: 10px;
}
div.output_html > iframe, div.output_area {
    margin-left: 3rem;
}

div.output_subarea {
    margin-left: 1rem;
}

div.output_svg div {
    max-width: 98%;
    margin-left: 0 !important;
}

/* -----------------------------------
    EDIT MODE
   -----------------------------------
*/

div.input_area {
    border-radius: 0;
    border: none;
    padding: 0 5px;
}

div.cell.edit_mode {
    border-radius: 0;
    border: thin solid var(--cell-edit-border);
}

.edit_mode div.cell.selected div.input:before,
.edit_mode div.cell.selected.unrendered div.input:before {
    color: var(--cell-edit-border);
}

.code_cell div.input_prompt:after,
.code_cell div.output_prompt:after {
    display: inline-block;
    content: '';
    font-size:  0.75rem;
    font-style: normal !important;
}

.edit_mode div.cell.selected {
    border: none;
    background: none !important;
}

.edit_mode div.cell.selected:before{
    width: 0;
    background: none;
}


/* -----------------------------------
    CELLS Render
   -----------------------------------
*/

/* -- CODE CELLS -- */

/* Display + Edit modes */
div.code_cell pre, div.CodeMirror, div.CodeMirror-linenumber {
    --text-markdown-render-mono-font: {{ mono_font }}, "mono-code", monospace;
    --text-mono-line-height: 1.6;

    font-family: var(--text-markdown-render-mono-font) !important;
    font-size: var(--text-mono_font_size) !important;
    line-height: var(--text-mono-line-height) !important;
}

div.CodeMirror-linenumber {
    --text-mono_font_size: 12px !important;
}

/* -- MARKDOWN CELLS (Edit) -- */

/* md cell */
div.text_cell.unrendered pre {
    /* general font rule */
    --text-markdown-render-mono-font: "mono-md", "mono-code", Menlo, monospace;
    --text-mono_font_size: {{ mono_font_size }};

    font-family: var(--text-markdown-render-mono-font)  !important;
    font-size: var(--text-mono_font_size) !important;
}

/* md cell headers (edit) */
.cm-header-1, .cm-header-2, .cm-header-3,
.cm-header-4, .cm-header-5, .cm-header-6 {
    /* general font rule */
    --text-notebook-ui-header-font: "mono-md", "mono-code", Menlo, monospace;
    font-family: var(--text-notebook-ui-header-font) !important;
}

/* ------------------------------------------------------------------
        MARKDOWN CELLS (DISPLAY MODE)

        Notes: Font-families to use here:
            md-text --> general text (Computer Modern Typeface, CMU)
            md-mono --> Monospace output (CMU Typewriter)
   ------------------------------------------------------------------
 */

div.text_cell_render {
    /* general font rule */
    --text-ui-font: "md-text", "Times New Roman", serif;
    --text-font-size: 19px;
    --text-color: var(--darker-grey);
    --text-markdown-render-mono-font: "md-mono", "mono-code", Menlo, monospace;

    font-family: var(--text-ui-font) !important;
    font-size: var(--text-font-size) !important;
    color: var(--text-color) !important;
    text-align: justify !important;
    display: block;
    word-break: normal !important;
    word-wrap: break-word !important;
}

div.text_cell_render a {
    color: var(--link-color) !important;
}

div.text_cell_render h1, div.text_cell_render h2,
div.text_cell_render h3, div.text_cell_render h4,
div.text_cell_render h5, div.text_cell_render h6 {
    font-family:  var(--text-ui-font) !important;
    font-style: normal !important;
}

/* Font-sizes for headers */
div.text_cell_render h1 {
    font-size: 4rem !important;
    text-align: center !important;
    padding-top:  3rem;
    padding-bottom: 3rem;
}

div.text_cell_render h2 {
    font-size: 3.6rem !important;
}

div.text_cell_render h3 {
    font-size: 3.2rem !important;
}

div.text_cell_render h4 {
    font-size: 2.8rem !important;
}

div.text_cell_render h5 {
    font-size: 2.4rem !important;
}

div.text_cell_render h6 {
    font-size: 2rem !important;
    border-bottom: 1px solid rgb(204, 204, 204);
}

div.text_cell_render p,
div.text_cell_render pre, div.text_cell_render code {
    font-size: 1em !important;
    color: var(--code-text-color) !important;
}

/* Monospace Code - no code syntax highlight*/
div.text_cell_render pre {
    /* hack: using code background colour here to allow for compatibility */
    background-color: var(--code-background-color) !important;
    font-family: var(--text-markdown-render-mono-font) !important;
    letter-spacing: .25px;
}

div.text_cell_render p {
    line-height: 1.5;
    text-align: justify !important;
}

div.text_cell_render p code {
    background-color: var(--mono-md-bg) !important;
}

div.text_cell_render p strong code {
    font-weight: bold !important;
}

div.text_cell_render p em code {
    font-style: italic !important;
}

div.text_cell_render pre code {

    --text-mono-line-height: 1.3;
    --text-font-size: 18px;
    font-size: var(--text-font-size) !important;

    padding: 1rem 1.5rem;
    display: block !important;
    color: var(--code-text-color) !important;
    background-color: var(--code-background-color) !important;
    font-family: var(--text-markdown-render-mono-font) !important;
    word-wrap: break-word;
    word-break: normal;
}


div.text_cell_render blockquote {
    --text-color: #6f6f6f !important;

    margin: 2rem .2rem !important;
    padding: .3rem .5rem !important;
    border-left: .3rem solid #a7a7a7 !important;
}

div.text_cell_render blockquote p {
    padding: .2rem 1.5rem;
}

div.text_cell_render table {
    font-size: var(--text-font-size) !important;
    border-collapse: collapse;
    border-spacing: 0;
    width: 100%;
    overflow: auto;
    break-inside: auto;
    text-align: left;
    margin-top: 25px;
}

div.text_cell_render table thead {
    display: table-header-group;
    vertical-align: middle !important;
    border-bottom: none !important;
}

div.text_cell_render table thead tr,
div.text_cell_render table thead tr th,
div.text_cell_render table thead tr td,
div.text_cell_render table tbody tr,
div.text_cell_render table tbody tr th,
div.text_cell_render table tbody tr td {
    break-inside: avoid;
    break-after: auto;
    text-align: left !important;
    vertical-align: middle !important;
    padding: 0 !important;
}

div.text_cell_render table tr th {
    border-bottom-width: 0;
}

div.text_cell_render ul, div.text_cell_render ol {
    position: relative;
    display: block;
    margin-bottom: 0 !important;
}

div.text_cell_render ul {
    list-style-type: disc;
}

div.text_cell_render ul li, div.text_cell_render ol li {
    /*white-space: pre-wrap;*/
    padding: .8rem !important;
}

div.text_cell_render ul ul {
    list-style-type: circle !important;
}

div.text_cell_render ul ul,
div.text_cell_render ul ol,
div.text_cell_render ol ul,
div.text_cell_render ol ol {
    padding-top: .5rem !important;
}

div.text_cell_render ul li > ul li,
div.text_cell_render ul li > ol li,
div.text_cell_render ol li > ul li,
div.text_cell_render ol li > ol li {
    padding: .5rem !important;
}

div.text_cell_render ul ul ul {
    list-style-type: square !important;
}

div.text_cell_render p > img:only-child {
    display: block;
    margin: auto;
    max-width: 70% !important;
}

div.text_cell_render img {
    max-width: 70%;
}

